@page "/"

<PageTitle>Kids Money Manager</PageTitle>

<style>
    .hero-section {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        margin: -1rem; 
        padding: 2rem;
    }

    .login-card {
        background: white;
        border-radius: 30px;
        padding: 3rem;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        max-width: 500px;
        width: 100%;
    }

    .bank-logo {
        font-size: 4rem;
        margin-bottom: 1rem;
    }

    .login-btn {
        padding: 1.5rem;
        font-size: 1.3rem;
        border-radius: 15px;
        border: none;
        font-weight: bold;
        transition: all 0.3s;
        margin: 0.5rem 0;
        width: 100%;
        cursor: pointer;
    }

    .parent-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

        .parent-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
        }

    .child-btn {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
    }

        .child-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(245, 87, 108, 0.4);
        }

    .tagline {
        color: #666;
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }
</style>

<div class="hero-section">
    <div class="login-card text-center">
        <div class="bank-logo">🏦</div>
        <h1 class="mb-3">Kids Money Manager</h1>
        <p class="tagline">Your family's financial future starts here!</p>

        <div class="d-grid gap-3">
            <a href="/parent-login" class="login-btn parent-btn">
                <div class="d-flex align-items-center justify-content-center">
                    <span style="font-size: 2rem; margin-right: 15px;">👨‍💼</span>
                    <div class="text-start">
                        <div>Parent Login</div>
                        <small style="opacity: 0.9;">Manage accounts & approve chores</small>
                    </div>
                </div>
            </a>

            <a href="/children" class="login-btn child-btn">
                <div class="d-flex align-items-center justify-content-center">
                    <span style="font-size: 2rem; margin-right: 15px;">👧👦</span>
                    <div class="text-start">
                        <div>Kid's Corner</div>
                        <small style="opacity: 0.9;">Check your balance & chores</small>
                    </div>
                </div>
            </a>
        </div>

        <div class="mt-4">
            <small class="text-muted">💰 Earn · Save · Learn · Grow 💰</small>
        </div>
    </div>
</div>
